    width: 100%;
    padding-left: 10px;
    font-family: Jost;
    font-size: 16px;
    font-weight: 400;
    line-height: 16px;
    letter-spacing: -0.02em;
    text-align: left;
    text-underline-position: from-font;
    text-decoration-skip-ink: none;
    appearance: none;
    cursor: pointer;
}
.color_option li label {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    padding-left: 10px;
    cursor: pointer;
}
.color_option li input:checked + label {
    background-color: #000;
    color: #fff;
}
.color_option li input {
    position: absolute;
    opacity: 0;
}
.button_action {
    background-color: #000;
    color: #fff;
    height: 40px;
    font-family: Jost;
    font-size: 16px;
    font-weight: 400;
    line-height: 20.48px;
    text-align: center;
