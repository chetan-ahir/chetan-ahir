    font-size: clamp(24px, 3vw, 36px);
    font-weight: 400;
    line-height: clamp(28px, 3vw, 43.2px);
    text-align: left;
}
.product_image {
    position: relative;
    height: clamp(70vh,4vw,444px);
}
span.open_modal {
    position: absolute;
    right: var(--popup_position_right);
    top: var(--popup_position_top);
    display: inline-block;
    cursor: pointer;
}
.modal {
    display: none;
    position: fixed;
    top: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.6);
    left: 0;
    right: 0;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.modal_content {
    width: 310px;
    background: #fff;
    position: relative;
    padding: 30px 20px 25px;
}
.modal .close {
    position: absolute;
    top: 0;
    right: 10px;
    transform: rotateX(45deg);
    font-size: 25px;
    line-height: normal;
    cursor: pointer;
}
.product_image img {
    width: auto;
    max-width: 433px;
    object-fit: cover;
    height: 100%;
}
.product_grid {
    display: grid;
    grid-template-columns: repeat(var(--desktop_grid), auto);
    gap: var(--grid_gap);
}
.product_info {
    display: flex;
    gap: 8px;
}
.product_info img {
    width: 120px;
    height: 140px;
    object-fit: cover;
}
.product_info h1 {
    font-family: Jost;
    font-size: 16px;
    font-weight: 300;
    line-height: 19.2px;
    text-align: left;
    text-underline-position: from-font;
    text-decoration-skip-ink: none;
}
.product_info p {
    font-family: Jost;
    font-size: 14px;
    font-weight: 300;
    line-height: 15.4px;
    letter-spacing: -0.5px;
    text-align: left;
    color: #000;
}
.product_info p.product_price {
    font-size: 16px;
    font-weight: 400;
    line-height: 19.2px;
    text-align: left;
    color: #000;
    font-family: 'Lustria';
}
.product-action-info {
    display: flex;
    flex-direction: column-reverse;
}
.color_option {
    list-style: none;
    padding-left: 0;
    display: flex;
    margin: 0;
}
.variant_id{
    height: 0;
    opacity: 0;
}
.product-action-info p {
    margin: 0;
}
ul.color_option li:before {
    content: "";
    width: 5px;
    height: 100%;
    background-color: var(--color_value);
    display: block;
    border-right: 1px solid #000;
}
ul.color_option li {
    width: 100%;
    border: 1px solid;
    padding: 0;
    display: flex;
    align-items: center;
    font-family: Jost;
    font-size: 18px;
    font-weight: 400;
    line-height: 18px;
    letter-spacing: -0.02em;
    text-align: left;
    text-underline-position: from-font;
    text-decoration-skip-ink: none;
